{
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "emmet.showExpandedAbbreviation": "never",
  "files.associations": {
    "*.mdx": "markdown",
    "bun.lock": "plaintext"
  },
  "files.exclude": {
    "**/.task": true,
    "**/node_modules": true
  },
  "files.insertFinalNewline": true,
  "json.schemaDownload.enable": false
}
